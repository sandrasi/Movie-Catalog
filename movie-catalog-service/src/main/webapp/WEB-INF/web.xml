<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>movie-catalog-service</display-name>

    <filter>
        <filter-name>movie-catalog-service-filter</filter-name>
        <filter-class>com.github.sandrasi.moviecatalog.service.MovieCatalogServiceFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>movie-catalog-service-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
